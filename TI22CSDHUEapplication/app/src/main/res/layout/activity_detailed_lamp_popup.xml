<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="1dp"
    android:layout_margin="1dp"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/POTextViewLampNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="Lamp no."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/POLampNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/POTextViewLampNo"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/PODivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20px"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POLampNo" />

    <TextView
        android:id="@+id/POTextViewAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PODivider1" />

    <Switch
        android:id="@+id/POSwitchOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/POTextViewAvailable"
        app:layout_constraintTop_toBottomOf="@+id/PODivider1" />

    <View
        android:id="@+id/PODivider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20px"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POSwitchOnOff" />

    <TextView
        android:id="@+id/POTextViewLampName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_marginBottom="26dp"
        android:text="Lamp name "
        app:layout_constraintBottom_toTopOf="@+id/PODivider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PODivider2" />

    <Button
        android:id="@+id/POButtonConfirm"
        android:layout_width="75px"
        android:layout_height="75px"
        android:background="@color/colorPrimary"
        android:text="âˆš"
        app:layout_constraintBottom_toTopOf="@+id/PODivider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PODivider2" />

    <EditText
        android:id="@+id/POEditTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minWidth="50pt"
        app:layout_constraintEnd_toStartOf="@+id/POButtonConfirm"
        app:layout_constraintStart_toEndOf="@+id/POTextViewLampName"
        app:layout_constraintTop_toBottomOf="@+id/PODivider2" />

    <View
        android:id="@+id/PODivider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20px"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POEditTextName" />

    <TextView
        android:id="@+id/POTextViewHue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="@string/hue_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PODivider3" />

    <SeekBar
        android:id="@+id/POHue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="65535"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POTextViewHue" />

    <View
        android:id="@+id/PODivider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POHue" />

    <TextView
        android:id="@+id/POTtextViewSat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sat_label"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PODivider4" />

    <SeekBar
        android:id="@+id/POSaturation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="254"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POTtextViewSat" />

    <View
        android:id="@+id/PODivider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POSaturation" />

    <TextView
        android:id="@+id/POTextViewBri"
        android:layout_width="75dp"
        android:layout_height="27dp"
        android:text="@string/bri_label"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PODivider5" />

    <SeekBar
        android:id="@+id/POBrightness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:max="254"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POTextViewBri" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="311dp" />

    <Switch
        android:id="@+id/POSwitchDisco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/POtextViewDisco"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/POtextViewDisco"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_margin="20px"
        android:layout_marginTop="12dp"
        android:text="@string/disco_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POBrightness" />

</androidx.constraintlayout.widget.ConstraintLayout>
